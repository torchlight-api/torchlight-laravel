{
    "name": "torchlight/torchlight-laravel",
    "description": "A Laravel Client for Torchlight, the syntax highlighting API.",
    "homepage": "https://torchlight.dev",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "syntax highlighting",
        "code highlighting",
        "laravel"
    ],
    "authors": [
        {
            "name": "Aaron Francis",
            "email": "aaron@hammerstone.dev"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/support": "^8.0|^9.0|^10.0|^11.0",
        "illuminate/console": "^8.0|^9.0|^10.0|^11.0",
        "illuminate/http": "^8.0|^9.0|^10.0|^11.0",
        "illuminate/cache": "^8.0|^9.0|^10.0|^11.0",
        "illuminate/view": "^8.0|^9.0|^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.2",
        "ramsey/uuid": "^3.7|^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0|^6.0|^7.0|^9.0",
        "mockery/mockery": "^1.3.3",
        "phpunit/phpunit": "^8.5.23|^9.5|^10.5"
    },
    "autoload": {
        "psr-4": {
            "Torchlight\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Torchlight\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Torchlight\\TorchlightServiceProvider"
            ]
        }
    }
}
